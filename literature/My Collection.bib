issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Beta diversity,Longleaf pine,Pairwise distance,Species turnover,Variance partitioning},
number = {September 2018},
pages = {409--414},
publisher = {Elsevier},
title = {{Maximizing the monitoring of diversity for management activities: Additive partitioning of plant species diversity across a frequently burned ecosystem}},
