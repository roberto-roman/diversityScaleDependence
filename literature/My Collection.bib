journal = {Functional Ecology},
keywords = {Competition,Functional traits,Habitat filtering,Niche differences,Phylogenetic relatedness,Species pool},
number = {5},
pages = {592--599},
title = {{Community assembly, coexistence and the environmental filtering metaphor}},
volume = {29},
year = {2015}
}
@article{Kraft2011,
